#!/usr/bin/python3

import argparse, sys, os

try:
    import ptxprint
except ImportError:
    sys.path.append(os.path.join(os.path.dirname(__file__), "..", "lib"))
    import ptxprint

parser = argparse.ArgumentParser()
parser.add_argument('-p','--paratext',required=True,help="Path to Paratext Projects directory")
args = parser.parse_args()

# Where to find the default for -p
# HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\Windows\CurrentVersion\Installer\Folders

def doit(printer):
    info = ptxprint.Info(printer, args.paratext)
    print(info.asTex())

mainw = ptxprint.PtxPrinter()
mainw.run(doit)
